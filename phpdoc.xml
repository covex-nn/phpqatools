<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>PHP Qa Tools</default-package-name>
        <encoding>utf-8</encoding>
        <target>build/phpdoc</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>build/api</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>build/logs/{DATE}.log</default>
            <errors>build/logs/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="responsive"/>
    </transformations>
</phpdocumentor>
